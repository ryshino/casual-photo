<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title" id="subtitle">
        New User
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
          <div class="field">
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "email", :placeholder => "name", class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autocomplete: "email", :placeholder => "email", class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :password, 'パスワード（６文字以上必要です）', class: "label" %>
            <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password", class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :password_confirmation, '確認用', class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation", class: "input" %>
          </div>
          
          <%= f.submit 'Sign up!', class: "button is-success mt-2 is-fullwidth" %>
        <% end %>
        
        <div>
          <%= link_to '登録がお済みの方はこちら', login_path, class: "button is-info mt-6" %>
        </div>
      </div>
    </div>
  </div>
</section>


