<% if logged_in? %>
  <% if current_user.already_favorited?(photo.favorites, current_user.id) %>
    <%= link_to photo_favorites_path(photo), class: 'like', method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #FF69A3;"></i>
    <% end %>
  <% else %>
    <%= link_to photo_favorites_path(photo), class: 'unlike',method: :post, remote: true do %>
      <i class="far fa-heart" aria-hidden="true"></i>
    <% end %>
  <% end %>
  <%= photo.favorites.size %>
<% else %>
  <i class="fa fa-heart" aria-hidden="true" style="color: #FF69A3;"></i>
  <%= photo.favorites.size %>
<% end %>